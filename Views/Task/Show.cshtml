@model List<AppTask>

<style>
    .task-item {
        display: flex;
        align-items: flex-start;
        background-color: #f2f2f2;
        padding: 10px;
        margin-bottom: 10px;
    }

        .task-item.completed {
            background-color: #c8e6c9;
        }

    .task-content {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        flex-grow: 1;
    }

    .task-buttons {
        display: flex;
    }

    .task-item h3,
    .task-item p {
        margin: 0;
        padding: 0;
    }

    .task-item h3 {
        color: #333;
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .task-item p {
        color: #666;
        font-size: 14px;
    }

    .task-item form {
        margin-left: 10px;
    }

    .complete-button,
    .delete-button,
    .change-button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        cursor: pointer;
        border-radius: 4px;
    }

    .delete-button {
        background-color: red;
    }

    .change-button {
        background-color: #2196F3; <---->for future</>
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<h1>Tasks</h1>

@foreach (var task in Model)
{
        <div class="task-item @(task.TaskStatus ? "completed" : "")">
            <div class="task-content">
                <h3>@task.TaskName</h3>
                <p>@task.TaskDescription</p>
            </div>
            <div class="task-buttons">
            @if (!task.TaskStatus)
            {
                <form method="post" asp-action="Complete" asp-controller="Task" class="complete-form">
                            <input type="hidden" name="taskId" value="@task.TaskID" />
                            <button type="submit" class="complete-button">✓</button>
                        </form>
            }
                <form method="post" asp-action="Delete" asp-controller="Task" class="delete-form">
                    <input type="hidden" name="taskId" value="@task.TaskID" />
                    <button type="submit" class="delete-button">🗑️</button>
                </form>
                <>for modal window</>
            </div>
        </div>
}

