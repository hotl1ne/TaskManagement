@using WebApp.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}

<style>
    .register-container {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .register-title {
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
    }

    .register-form label {
        font-weight: bold;
    }

    .register-form .form-group {
        margin-bottom: 20px;
    }

    .register-form .form-control {
        width: 100%;
    }

    .register-form .btn-register {
        width: 100%;
        background-color: #28a745;
        color: #fff;
        border: none;
    }

        .register-form .btn-register:hover {
            background-color: #218838;
        }

    .register-form .btn-cancel {
        width: 100%;
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

        .register-form .btn-cancel:hover {
            background-color: #5a6268;
        }

    .register-form .text-danger {
        color: red;
    }

    .alert-danger {
        color: red;
        font-weight: bold;
    }
</style>

<div class="row">
    <div class="col-md-6 offset-3">
        <h4 class="register-title">Sign up for a new account</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <strong>Sorry!</strong> - @TempData["Error"]
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form class="register-form" asp-controller="User" asp-action="Register" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nickname" class="control-label">Nickname</label>
                        <input asp-for="Nickname" class="form-control" />
                        <span asp-validation-for="Nickname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Sign up" class="btn btn-register" />
                        <a href="/" class="btn btn-cancel">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
