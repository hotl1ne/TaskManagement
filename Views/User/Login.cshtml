@using WebApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .login-title {
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
    }

    .login-form label {
        font-weight: bold;
    }

    .login-form .form-group {
        margin-bottom: 20px;
    }

    .login-form .form-control {
        width: 100%;
    }

    .login-form .btn-login {
        width: 100%;
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .login-form .btn-login:hover {
            background-color: #0056b3;
        }

    .login-form .btn-cancel {
        width: 100%;
        background-color: #ccc;
        color: #333;
        border: none;
    }

        .login-form .btn-cancel:hover {
            background-color: #999;
        }

    .login-form .validation-error {
        color: red;
    }

    .error-message {
        color: red;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }
</style>

<div class="login-container">
    <h4 class="login-title">Log in to your account</h4>

    @if (TempData["Error"] != null)
    {
        <div class="error-message">
            <strong>Sorry!</strong> - @TempData["Error"]
        </div>
    }

    <form class="login-form" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="validation-error"></div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="validation-error"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Log in" class="btn btn-login" />
            <a href="~/Home/Index" class="btn btn-cancel">Cancel</a>
        </div>
    </form>
</div>
